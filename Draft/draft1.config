# ------------------------------------------------------------
# tms.stage.eniac-tech.com (supports both SNI and non-SNI clients)
# ------------------------------------------------------------

map $scheme $hsts_header {
    https   "max-age=63072000; preload";
}

# ---- Default (non-SNI) SSL server ----
# Handles TLS connections that don't send SNI
server {
    listen 443 default_server ssl;
    listen [::]:443 default_server ssl;

    # Reuse the same valid certificate
    ssl_certificate /data/custom_ssl/npm-1/fullchain.pem;
    ssl_certificate_key /data/custom_ssl/npm-1/privkey.pem;

    # Allow legacy clients to negotiate older TLS if needed
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # (Optional) redirect to the proper hostname
    return 301 https://tms.stage.eniac-tech.com$request_uri;
}

# ---- Main HTTPS Virtual Host ----
server {
    set $forward_scheme https;
    set $server         "192.168.33.141";
    set $port           443;

    listen 80;
    listen [::]:80;

    listen 443 ssl;
    listen [::]:443 ssl;

    server_name tms.stage.eniac-tech.com;
    http2 off;

    # Custom SSL
    ssl_certificate /data/custom_ssl/npm-1/fullchain.pem;
    ssl_certificate_key /data/custom_ssl/npm-1/privkey.pem;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # Upstream proxy
    location / {
        proxy_pass https://192.168.33.141:443;

        # Donâ€™t send SNI to the upstream backend (safest for old embedded TLS)
        proxy_ssl_server_name off;

        # Keep headers for normal browsers and apps
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
